<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
   x:Class="PhotoSelector2.MainPage">

    <ScrollView>
  <VerticalStackLayout
      Padding="30,0"
 Spacing="25">
            
   <Label
        Text="Photo Manager"
     Style="{StaticResource Headline}"
  SemanticProperties.HeadingLevel="Level1" />

    <Label
  Text="File Mover by Name"
       Style="{StaticResource SubHeadline}"
    SemanticProperties.HeadingLevel="Level2" />

  <Frame BorderColor="LightGray" Padding="10">
<VerticalStackLayout Spacing="10">
  <Label Text="Source Folder:" FontAttributes="Bold" />
 <HorizontalStackLayout Spacing="10">
  <Entry x:Name="SourceFolderEntry" 
 Placeholder="Click Select to choose folder" 
HorizontalOptions="FillAndExpand"
     IsReadOnly="True" />
  <Button Text="Select" 
        Clicked="OnSelectSourceFolderClicked"
      WidthRequest="100" />
     </HorizontalStackLayout>
   <Label x:Name="DestinationFolderLabel" 
       Text="Destination: (will be created as 'selected' subfolder)" 
FontSize="12" 
    TextColor="Gray" />
    </VerticalStackLayout>
    </Frame>

      <Frame BorderColor="LightGray" Padding="10">
           <VerticalStackLayout Spacing="10">
  <Label Text="File Names (comma separated):" FontAttributes="Bold" />
 <Editor x:Name="FileNamesEditor" 
     Placeholder="Example: photo-001.jpg, photo-002.jpg, ..."
    HeightRequest="150"
       AutoSize="TextChanges" />
     <Label Text="* Extensions are optional" 
        FontSize="12" 
     TextColor="Gray" />
      </VerticalStackLayout>
   </Frame>

    <Button x:Name="MoveFilesBtn"
        Text="Move Files" 
Clicked="OnMoveFilesClicked"
   BackgroundColor="#512BD4"
    TextColor="White"
       FontAttributes="Bold"
    HorizontalOptions="Fill" />

 <Frame BorderColor="LightGray" Padding="10" IsVisible="False" x:Name="ResultFrame">
 <VerticalStackLayout Spacing="10">
     <Label Text="Results:" FontAttributes="Bold" />
  <Label x:Name="ResultLabel" TextColor="Green" />
  
  <Label Text="Moved Files:" FontAttributes="Bold" x:Name="MovedFilesHeaderLabel" IsVisible="False" />
 <ScrollView HeightRequest="100" x:Name="MovedFilesScrollView" IsVisible="False">
    <Label x:Name="MovedFilesLabel" FontSize="12" />
 </ScrollView>
     
        <Label Text="Not Found/Failed:" FontAttributes="Bold" x:Name="NotFoundFilesHeaderLabel" IsVisible="False" />
        <ScrollView HeightRequest="100" x:Name="NotFoundFilesScrollView" IsVisible="False">
   <Label x:Name="NotFoundFilesLabel" FontSize="12" TextColor="Orange" />
        </ScrollView>
   </VerticalStackLayout>
  </Frame>

  </VerticalStackLayout>
    </ScrollView>

</ContentPage>
